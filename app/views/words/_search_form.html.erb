<%= link_to t("link_all"), category_path(params[:id]), remote: true,
  class: "col-md-1 col-md-offset-5 btn btn-default" %>
<%= form_tag category_path(id: params[:id]), method: :get, remote: true,
  class: "search-words input-group col-md-4 " do %>
  <%= text_field_tag :search, params[:search], placeholder: t("search_text"),
    class: "form-control txtSearch" %>
  <span class="input-group-btn">
    <button class="btn btnSearch" type="submit">
      <span class="glyphicon glyphicon-search"></span>
    </button>
  </span>
<% end %>
