<% provide :title, @title %>
<div class="container content">
  <div class="row">
    <aside class="col-md-3">
      <div class="row">
        <%= render "shared/user_profile_widget" %>
      </div>
    </aside>
    <div class="col-md-6">
      <h3><strong><%= @title.upcase %></strong></h3>
      <% if @users.any? %>
        <ul class="users follow">
          <%= render @users %>
        </ul>
        <%= will_paginate @users %>
      <% end %>
    </div>
  </div>
</div>
