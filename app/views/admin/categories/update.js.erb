<% if @category.errors.any? %>
  $("#category-modal .modal-content").html("<%= j render("form") %>");
<% else %>
  $("#category-modal").modal("hide");
  $("#category-item-<%= @category.id %>").replaceWith(
    "<%= j render("category", category: @category) %>");
  $("#flash-msg").html("<%= j render("shared/flash_message") %>");
<% end %>
