<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">&times;</button>
  <h4 class="modal-title"><%= yield :modal_header %></h4>
</div>
<div>
  <%= form_for [:admin, @category], remote: true do |f| %>
    <div class="modal-body">
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label :name, t("name") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :duration, t("duration_title") %>
      <%= f.text_field :duration, class: "form-control" %>

      <%= f.label :word_count, t("label_word_per_lesson") %>
      <%= f.text_field :word_count, class: "form-control" %>
    </div>
    <div class="modal-footer">
      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
      <button class="btn btn-default" data-dismiss="modal">
        <%= t "button_cancel" %>
      </button>
    </div>
  <% end %>
</div>
