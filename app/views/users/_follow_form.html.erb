<% unless current_user.current_user? @user %>
  <div id="follow_form">
    <% if current_user.following? @user %>
      <%= render "unfollow", relationship: @support_user.relationship(@user) %>
    <% else %>
      <%= render "follow", relationship: @support_user.relationship(@user) %>
    <% end %>
  </div>
<% end %>
