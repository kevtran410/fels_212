<div class="content">
  <div class="row categories-header">
    <div class="col-md-7 col-md-offset-1">
      <%= link_to t("link_courses"), categories_path, class: "categories-btn" %>
    </div>
    <div class="col-md-3">
      <%= render "search_form" %>
    </div>
  </div>

  <div class="container">
    <div class="row center">
      <h3><%= t "category_title" %></h3>
    </div>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <% if @categories.any? %>
          <div class="categories-content">
            <%= render @categories %>
            <div class="col-md-8 col-md-offset-2 center">
              <%= will_paginate @categories %>
            </div>
          </div>
        <% else %>
          <%= t "category_not_found_message" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
