<div class="row">
  <div class="col-md-9">
    <%= link_to t("link_courses"), categories_path, class: "btn btn-default" %>
  </div>
  <div class="col-md-3">
    <%= render "search_form" %>
  </div>
</div>
<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-8">
    <% if @categories.any? %>
      <%= render @categories %>
      <%= will_paginate @categories %>
    <% else %>
      <%= t "category_not_found_message" %>
    <% end %>
  </div>
</div>
