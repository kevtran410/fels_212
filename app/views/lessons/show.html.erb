<div class="container content">
  <div class="lesson-header">
    <%= @lesson.category.name %>
  </div>
  <div class="result-list col-md-12">
    <div class="col-md-3">
      <% if @lesson.finished? %>
        <%= @lesson.get_score_text %>
      <% else %>
        <div id="lesson-countdown"></div>
        <%= hidden_field :duration, "lesson",
          value: (@lesson.end_time - Time.now).to_i %>
      <% end %>
    </div>
    <div class="col-md-9">
      <%= form_for @lesson do |f| %>
        <%= f.fields_for :results do |builder| %>
          <div class="result-row">
            <%= render "result", f: builder %>
          </div>
        <% end %>
        <%= f.submit t("button_finish"), class: "btn btn-finish" unless @lesson.finished? %>
      <% end %>
    </div>
  </div>
</div>
